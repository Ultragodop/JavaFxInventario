<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
           fx:controller="com.minimercado.javafxinventario.controllers.MainMenuController"
           stylesheets="@styles.css">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="Settings" />
                    <SeparatorMenuItem />
                    <MenuItem text="Exit" />
                </Menu>
                <Menu text="View">
                    <MenuItem text="Toggle Theme" onAction="#handleToggleTheme" />
                    <MenuItem text="Theme Settings" onAction="#handleThemeSettings" />
                </Menu>
                <Menu text="Help">
                    <MenuItem text="About" />
                </Menu>
            </MenuBar>
            
            <HBox spacing="10" style="-fx-padding: 10;" styleClass="menu-bar">
                <Button text="Buscar Productos" onAction="#handleBuscarProductos" styleClass="button-primary"/>
                <Button text="Módulo de Ventas" onAction="#handleVentas" styleClass="button-success"/>
                <Button text="Módulo Contable" onAction="#handleContabilidad" styleClass="button-primary"/>
                <Button text="Órdenes de Compra" onAction="#handlePurchaseOrder" styleClass="button-primary"/>
                <Button text="Proveedores" onAction="#handleSuppliers" styleClass="button-primary"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <StackPane fx:id="contentPane" styleClass="content-pane">
            <!-- Content will be loaded here dynamically -->
        </StackPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 5;" styleClass="status-bar">
            <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
            </padding>
            <Button text="Toggle Theme" onAction="#handleToggleTheme" styleClass="small-button"/>
        </HBox>
    </bottom>
</BorderPane>
