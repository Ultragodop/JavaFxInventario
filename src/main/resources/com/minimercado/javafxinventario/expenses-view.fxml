<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>

<BorderPane prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.minimercado.javafxinventario.controllers.ExpenseController">
   <top>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Label styleClass="header-label" text="Gestión de Gastos">
               <padding>
                  <Insets bottom="10.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.6" orientation="VERTICAL">
         <items>
            <SplitPane dividerPositions="0.65">
               <items>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                           <children>
                              <Label text="Período:" />
                              <ComboBox fx:id="periodFilterCombo" prefWidth="150.0" />
                              <Label text="Desde:" />
                              <DatePicker fx:id="startDatePicker" />
                              <Label text="Hasta:" />
                              <DatePicker fx:id="endDatePicker" />
                              <Label text="Categoría:" />
                              <ComboBox fx:id="categoryFilterCombo" prefWidth="150.0" />
                              <Button mnemonicParsing="false" onAction="#handleFilterExpenses" text="Filtrar" styleClass="button-primary" />
                           </children>
                        </HBox>
                        <TableView fx:id="expenseTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Fecha" />
                              <TableColumn fx:id="categoryColumn" prefWidth="150.0" text="Categoría" />
                              <TableColumn fx:id="descriptionColumn" prefWidth="250.0" text="Descripción" />
                              <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Monto" />
                              <TableColumn fx:id="paymentMethodColumn" prefWidth="120.0" text="Método de Pago" />
                              <TableColumn fx:id="supplierColumn" prefWidth="150.0" text="Proveedor/Beneficiario" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <Label text="Distribución de Gastos" styleClass="section-header" />
                        <PieChart fx:id="categoryPieChart" VBox.vgrow="ALWAYS" />
                        <Label fx:id="totalExpensesLabel" text="Total: $0.00" styleClass="total-label" />
                     </children>
                  </VBox>
               </items>
            </SplitPane>
            <VBox spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Label text="Detalle del Gasto" styleClass="section-header" />
                  <GridPane hgap="10.0" vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                        <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Categoría:" />
                        <ComboBox fx:id="categoryCombo" prefWidth="200.0" GridPane.columnIndex="1" />
                        <Label text="Fecha:" GridPane.columnIndex="2" />
                        <DatePicker fx:id="expenseDatePicker" GridPane.columnIndex="3" />
                        <Label text="Monto:" GridPane.rowIndex="1" />
                        <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <children>
                              <Label text="0" />
                              <TextField fx:id="amountField" />
                           </children>
                        </HBox>
                        <Label text="Método de Pago:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <ComboBox fx:id="paymentMethodCombo" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                        <Label text="Comprobante Nº:" GridPane.rowIndex="2" />
                        <TextField fx:id="receiptNumberField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Proveedor:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <TextField fx:id="supplierField" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
                  <Label text="Descripción:" />
                  <TextArea fx:id="descriptionArea" prefHeight="60.0" wrapText="true" />
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <children>
                        <Label text="Comprobante:" />
                        <Button fx:id="attachReceiptButton" mnemonicParsing="false" onAction="#handleAttachReceipt" text="Adjuntar Archivo" />
                        <Label fx:id="filePathLabel" text="No hay comprobante adjunto" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleViewReceipt" text="Ver Comprobante" />
                     </children>
                  </HBox>
                  <Label text="Notas:" />
                  <TextArea fx:id="notesArea" prefHeight="40.0" wrapText="true" />
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleSaveExpense" text="Guardar" styleClass="button-success" />
                        <Button mnemonicParsing="false" onAction="#handleDeleteExpense" text="Eliminar" styleClass="button-danger" />
                        <Button mnemonicParsing="false" onAction="#handleClearForm" text="Nuevo" styleClass="button-primary" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="status-bar">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
         <children>
            <Label fx:id="statusLabel" text="Listo" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
